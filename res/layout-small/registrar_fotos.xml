<?xml version="1.0" encoding="utf-8"?>
       <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:layout_width="fill_parent" android:layout_height="wrap_content"
			 android:stretchColumns="2">
			<TableRow android:background="#353535" android:paddingTop="9px">
				<!-- Tipo de Serviço -->
				<TextView android:text="@string/str_tipo_servico"
						  android:layout_marginRight="1px" android:textStyle="bold" 
						  android:layout_span="2"/>
				<TextView android:id="@+id/tipoServico" android:layout_span="3" android:layout_gravity="left"/>
				
			</TableRow>
			<TableRow android:background="#353535">
				<!-- OS -->
				<TextView android:text="@string/label_OS" android:layout_margin="0px"
						  android:textStyle="bold" android:layout_width="0px"/>
				<TextView android:id="@+id/osServico" android:layout_gravity="left"
				    android:layout_margin="0px"/> 
				
				<!-- Qtd -->
				<TextView android:text="@string/label_qtd" 
						  android:layout_marginRight="1px" android:textStyle="bold" android:layout_gravity="right"/>
				<TextView android:layout_gravity="right" android:id="@+id/qtdServico" />   
			    
			</TableRow>
			<TableRow android:background="#353535">
				<!-- Data -->
				<TextView android:text="@string/label_data" 
						  android:layout_marginRight="1px" android:textStyle="bold" />
				<TextView android:id="@+id/dataServico" android:layout_gravity="left"/>
				
				<!-- Ordem -->
				<TextView android:text="@string/label_ordem" android:layout_gravity="right"
						  android:layout_marginRight="1px" android:textStyle="bold" />
				<TextView android:layout_gravity="right" android:id="@+id/ordemServico" />
			</TableRow>
			
	<ScrollView android:layout_width="fill_parent" 
	            android:layout_height="fill_parent">
	            
		<LinearLayout android:textColor="#FFFFFF" 
	                  android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">
			
                  
        <ImageView android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
	    
        <!-- Antes da Execução -->
	    <LinearLayout android:orientation="horizontal"
                      android:id="@+id/llAntesExecucao" android:layout_width="fill_parent" android:layout_height="wrap_content">
	    
	    	<ImageView android:id="@+id/imgAntesExecucao" android:layout_width="30px" android:layout_height="30px" 
                       android:layout_marginRight="30px" android:layout_marginTop="15px" android:layout_marginBottom="15px" />
	    	
	    	<TextView android:id="@+id/fotoAntesExecucao" android:textColor="#FFFFFF" android:textStyle="bold" 
                      android:text="@string/str_foto_tipo_antes_execucao" android:paddingTop="25px" android:layout_width="fill_parent" 
                      android:layout_height="wrap_content" />
			   			
	    </LinearLayout>
	    <ImageView android:src="@drawable/line" android:layout_width="fill_parent"  android:layout_height="wrap_content" />
	    	
	    <!-- Durante a Execução -->
	    <LinearLayout android:orientation="horizontal"
		              android:id="@+id/llDuranteExecucao" android:layout_width="fill_parent" android:layout_height="wrap_content">
	    
	    	<ImageView android:id="@+id/imgDuranteExecucao" android:layout_width="30px" android:layout_height="30px"  
                       android:layout_marginRight="30px" android:layout_marginTop="15px" android:layout_marginBottom="15px" />
	    	
	    	<TextView android:id="@+id/fotoDuranteExecucao" android:textColor="#FFFFFF" android:textStyle="bold" 
                      android:text="@string/str_foto_tipo_durante_execucao" android:paddingTop="25px" android:layout_width="fill_parent" 
                      android:layout_height="wrap_content" />
			        	
	    </LinearLayout>
	    <ImageView android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
	    
       <!-- Após a Execução -->
       <LinearLayout android:orientation="horizontal"
                     android:id="@+id/llAposExecucao" android:layout_width="fill_parent" android:layout_height="wrap_content">
        
            <ImageView android:id="@+id/imgAposExecucao" android:layout_width="30px" android:layout_height="30px" 
                       android:layout_marginRight="30px" android:layout_marginTop="15px" android:layout_marginBottom="15px" />
            
            <TextView android:id="@+id/fotoAposExecucao" android:textColor="#FFFFFF" android:textStyle="bold" 
                      android:text="@string/str_foto_tipo_apos_execucao" android:paddingTop="25px" android:layout_width="fill_parent" 
                      android:layout_height="wrap_content" />
                        
        </LinearLayout>
        <ImageView android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
                   
       <!-- Fachada do Imóvel -->
       <LinearLayout android:orientation="horizontal"
                     android:id="@+id/llFachada" android:layout_width="fill_parent" android:layout_height="wrap_content">
        
            <ImageView android:id="@+id/imgFachada" android:layout_width="30px" android:layout_height="30px"  
                       android:layout_marginRight="30px" android:layout_marginTop="15px" android:layout_marginBottom="15px" />
            
            <TextView android:id="@+id/fotoFachada" android:textColor="#FFFFFF" android:textStyle="bold" 
                      android:text="@string/str_foto_tipo_fachada_imovel" android:paddingTop="25px" android:layout_width="fill_parent" 
                      android:layout_height="wrap_content" />
                        
        </LinearLayout>
        <ImageView android:src="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
                   
	    <ImageView android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="wrap_content" 
                   android:layout_gravity="center" />
    	
    	<View android:layout_width="fill_parent" android:layout_height="1dip" android:layout_weight="0" 
              android:background="#000000" />
	</LinearLayout>    
</ScrollView>

</TableLayout>